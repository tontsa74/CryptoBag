<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/buyCurrencyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="currency to buy"/>

    <EditText
        android:id="@+id/buyAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="amount"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/sellCurrencyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="currency buy with"/>

    <EditText
        android:id="@+id/sellAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="amount"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/coinBuyPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="coin buy price"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/coinCurrentPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="coin current price"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/profitTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profit"/>

    <EditText
        android:id="@+id/taxEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tax"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save transaction"
        android:onClick="saveTransaction"/>

</LinearLayout>